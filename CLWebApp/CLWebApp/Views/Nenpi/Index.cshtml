@using CLWebApp.Models.ViewModels
@model NenpiViewModel
@{
    ViewData["Title"] = "燃費計算アプリ";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    @*<div class="col-md-8">*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="Index" method="get">
        <div class="col-md-offset-5">
            <button type="submit" class="btn btn-warning">クリア</button>
        </div>
    </form>
    <form method="post">
        <input type="hidden" asp-for="btnCalculationEnabled" />
        <input type="hidden" asp-for="isCalculated" />
        <div class="form-group form-inline col-md-12">
            <label asp-for="dataTimePicker" class="col-md-2 text-right"></label>
            <input type="text" asp-for="dataTimePicker" class="form-control col-md-3 datepicker" />
            <span asp-validation-for="dataTimePicker" class="text-danger col-md-7"></span>
        </div>
        <div class="form-group form-inline col-md-12">
            <label asp-for="boxOilingQuantity" class="col-md-2 text-right"></label>
            <input asp-for="boxOilingQuantity" class="form-control col-md-3" maxlength="5" style="ime-mode: disabled" />
            <span asp-validation-for="boxOilingQuantity" class="text-danger col-md-7"></span>
        </div>
        <div class="form-group form-inline col-md-12">
            <label asp-for="pastMileage" class="col-md-2 text-right"></label>
            <input asp-for="pastMileage" class="form-control col-md-3" readonly />
        </div>
        <div class="form-group form-inline col-md-12">
            <label asp-for="currentMileage" class="col-md-2 text-right"></label>
            <input asp-for="currentMileage" class="form-control col-md-3" maxlength="9" style="ime-mode: disabled" />
            <span asp-validation-for="currentMileage" class="text-danger col-md-7"></span>
        </div>
        <div class="form-group form-inline col-md-12">
            <label asp-for="thisMileage" class="col-md-2 text-right"></label>
            <input asp-for="thisMileage" class="form-control col-md-3" readonly />
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <button type="button" class="submit_button btn btn-success btn-lg col-md-offset-2 col-md-3" id="calcBtn" data-action="@Url.Action("Calc","Nenpi")" data-btn="calcBtn">計算</button>
            </div>
        </div>
        <div class="form-group form-inline col-md-12">
            <label asp-for="fuelConsumption" class="col-md-2 text-right"></label>
            <input asp-for="fuelConsumption" class="form-control col-md-3 " readonly />
            <span asp-validation-for="fuelConsumption" class="text-danger col-md-7"></span>
        </div>
        <div class="form-group">
            <button type="button" class="submit_button btn btn-danger" id="recBtn" data-action="@Url.Action("Record","Nenpi")" data-btn="recBtn">記録</button>
        </div>
    </form>
    <form asp-controller="Home" asp-action="Index">
        <div class="col-md-offset-5">
            <button type="submit" class="btn btn-primary">ホームに戻る</button>
        </div>
    </form>
    @*</div>
        <div class="col-md-4"></div>*@
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<script src="~/js/Nenpi.js"></script>